#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/ldap-server/helpers/ctl_setup.sh 'ldap-server'

export PORT=${PORT:-5000}
export LANG=en_US.UTF-8

export OPENLDAP=/var/vcap/packages/openldap
export PATH=${OPENLDAP}/libexec:${OPENLDAP}/sbin:$PATH

case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME

    DATA_DIR=$STORE_DIR/data
    if [ ! -d "$DATA_DIR" ]
    then
      echo "Data storeage directory doesn't exist. Creating $DATA_DIR."
      mkdir -p $DATA_DIR
      chown vcap:vcap $DATA_DIR
      chmod 700 $DATA_DIR
    fi

    CONF_FILE=$JOB_DIR/config/slapd.ldif
    CONF_DIR=$STORE_DIR/slapd.d
    if [ -n "$RELOAD_CONFIG_ON_RESTART" ]
    then
      echo "Deleting existing configuration"
      rm -rf $CONF_DIR
    fi

    if [ ! -d "$CONF_DIR" ]
    then
      mkdir -p $CONF_DIR
      chown vcap:vcap $CONF_DIR
      echo "Creating config database from $CONF_FILE"
      sudo slapadd -F $CONF_DIR -n 0 -l $CONF_FILE
    fi

    sudo slapd -d stats,acl -F $CONF_DIR >>$LOG_DIR/$JOB_NAME.log 2>&1

    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: ldap-server_ctl {start|stop}"

    ;;

esac
exit 0
